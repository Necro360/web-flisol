<IfModule rewrite_module>
	RewriteBase /
	RewriteEngine On
	
	# PÃ¡gina de inicio
	RewriteRule ^$ /index.php [L]

	# Actividades
	RewriteRule ^actividades$ /actividades/ [R=301]
	RewriteRule ^actividades/$ /server/actividades.php
	RewriteRule ^actividades/([a-z]+)$ /server/actividad.php?slug=$1 [L]

	# Acerca de y registro
	RewriteRule ^acercade$ /acerca.php [L]
	RewriteRule ^registro$ /server/registro.php [QSA,L]

</IfModule>